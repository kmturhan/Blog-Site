@model MergeClass
@{
    ViewData["Title"] = "DetailPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail Page</h1>

    <div class="container">
        
        <div class="row">
            @foreach (var item in Model.mainList)
            {
                <!-- Post Content Column -->
            <div class="col-lg-8">

                <!-- Title -->
                <h1 class="mt-4">@item.Title</h1>

                <!-- Author -->
                <hr>
                <!-- Date/Time -->
                <p>Posted on @item.Create_Time.</p>
                <hr>
                <!-- Preview Image -->
                <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">
                <hr>
                <!-- Post Content -->
                <p class="lead">
                    @item.Content
                </p>
                <p class="lead">
                    @item.Short_Content
                </p>
                <hr>
            </div>
            }


            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Search Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Create New Post</h5>
                    <div class="card-body">
                        <div class="input-group">
                            @Html.ActionLink("Create New", "AddOrEdit", "Home")
                        </div>
                    </div>
                </div>
                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Categories</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    @foreach (var item in Model.categoryName)
                                    {
                                        if (item != null)
                                        {
                                            <li>
                                                @Html.ActionLink(item, "CategoryPost", "Home", new { test = item })
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Side Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Side Widget</h5>
                    <div class="card-body">
                        You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                    </div>
                </div>

            </div>

        </div>
        <!-- /.row -->
    </div>