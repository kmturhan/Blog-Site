@model MergeClass
@{
    ViewData["Title"] = "Index";
}

<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">
            Blogger
        </h1>
        @foreach (var item in Model.mainList)
        {
            <!-- Blog Post -->
            <div class="card mb-4">
                <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
                <div class="card-body">
                    <h2 class="card-title">@item.Title</h2>
                    <p class="card-text">@item.Short_Content</p>
                    @Html.ActionLink("Read More", "DetailPage", new { id = item.ID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Edit", "AddOrEdit", new { id = item.ID }, new { @class = "btn btn-danger" })
                </div>
                <div class="card-footer text-muted">
                    Posted on @item.Create_Time.ToShortDateString()
                </div>
            </div>
        }


        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
                <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer &rarr;</a>
            </li>
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Create New Post</h5>
            <div class="card-body">
                <div class="input-group">
                        @Html.ActionLink("Create New", "AddOrEdit", "Home",new { ID = Model.mainList.Count() })
                    
                </div>
            </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            @foreach (var item in Model.categoryName)
                            {
                                if (item != null)
                                {
                                    <li>
                                        @Html.ActionLink(item, "CategoryPost", "Home", new { CategoryName = item })
                                    </li>
                                }

                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        

    </div>

</div>
<!-- /.row -->
